/**
 * App listing styles.
 */

@import 'lib';

$app-list-background-color = #CBCDCD;

.app-list {
    position: absolute;
    bottom: 0;
    left: 0;

    width: 100%;
    height: (61.4 / 108) * 100%;
    overflow: hidden;

    background-color: $app-list-background-color;

    ul {
        padding: 3.1rem 11.6rem;
    }

    li {
        float: left;
        margin: 2.9rem 2.6rem;

        list-style: none;

        &::before {
            content: ".";

            position: absolute;
            top: 0;
            left: 0;

            color: $app-list-background-color;
        }
    }

    .app-button {
        width: auto;
        height: auto;

        font-family: $primary-font-family;

        &.focused {
            transform: scale(1.4);
        }

        &.pressed {
            transform: scale(1.22);
        }
    }
}

.app-list-app {
    position: relative;

    width: 18.9rem;
    height: 18.9rem;
    outline: 0 solid $greyscale-white;
    -moz-outline-radius: 60%;

    background-color: $app-list-background-color;

    smart-button-animation();

    .focused & {
        outline-width: .8rem;
    }

    .pressed & {
        outline-width: 1rem;

        transition-duration: .06s;
    }

    .released & {
        transition-duration: .16s;
    }

    .icon {
        position: relative;

        width: 100%;
        height: 100%;
        border-radius: 50%;
        overflow: hidden;

        color: $greyscale-light-grey;
        background-color: $greyscale-light-grey;
        background-size: 100% auto;
        background-position: center center;

        &::after {
            content: attr(data-name);
            box-sizing: border-box;

            position: absolute;
            bottom: 0;
            left: 0;

            width: 100%;
            height: 6rem;
            padding: 1rem 3rem 0;
            overflow: hidden;

            font-size: 1.6rem;
            font-style: italic;
            line-height: 2.2rem;
            text-align: center;
            white-space: nowrap;
            text-overflow: ellipsis;

            color: $greyscale-white;
            background-color: rgba(0, 0, 0, .4);
        }
    }

    .star {
        position: absolute;
        top: 0;
        left: 0;

        width: 4.5rem;
        height: 4.5rem;
        border-radius: 50%;

        line-height: 4.5rem;
        text-align: center;

        color: $suggested-star-color;
        background-color: $greyscale-white;;

        &::before {
            font-size: 4.5rem;
        }
    }
}
