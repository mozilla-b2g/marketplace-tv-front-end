/**
 * Tutorial styles.
 */

@import 'lib';

@keyframes spinner {
    0%{
        background-position: 0 0;
    }

    100%{
        background-position: -6600px 0;
    }
}

.slide-container {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;

    width: 100%;
    height: 100%;
    overflow: hidden;

    background-color: $greyscale-black;

    .slide {
        position: fixed;

        width: 100%;
        height: 100%;

        transition: opacity 1s;

        &.invisible {
            opacity: 0;
        }

        &.hidden {
            display: block;
            opacity: 0;
            visibility: hidden;

            transition: none;

            .slide-button {
                display: none;
            }
        }
    }
}

.slide-spinner {
    position: absolute;
    top: 50%;
    left: 50%;

    width: 200px;
    height: 200px;
    margin: -100px 0 0 -100px;

    background-image: url('../img/pinner_sprite.png');

    animation: spinner 1.133s steps(33) infinite;
}

.slide-section-top,
.slide-section-bottom {
    position: absolute;
    left: 50%;

    transform: translateX(-50%);
}

.slide-section-top {
    top: 8%;

    width: 150rem;
    height: 8rem;
    margin-top: -5rem;

    font-size: 3.8rem;
    font-style: italic;
    line-height: 8rem;
    text-align: center;
    text-shadow: 0 0 5px rgba(0, 0, 0, .5);

    color: $greyscale-white;

    b {
        display: inline-block;
        margin: 0 .5rem;
        padding: 0 4rem;
        border-radius: 4rem;
        box-shadow: 0 0 5px rgba(0, 0, 0, .5);

        font-size: 4.5rem;
        font-weight: normal;
        text-indent: -.8rem;
        text-align: center;

        background-color: $greyscale-black;
    }
}

.slide-section-middle {
    width: 100%;
    height: 100%;

    .circle {
        position: absolute;
        top: 50%;
        left: 50%;

        width: 21.8rem;
        height: 21.8rem;
        margin: -10.9rem 0 0 -10.9rem;
        padding: 4.5rem 0;
        border-radius: 50%;

        font-size: 1.9rem;
        font-style: italic;
        line-height: 2.5rem;
        text-align: center;

        color: $greyscale-black;
        background-color: $greyscale-white;

        &::before {
            content: '';

            display: block;
            width: 9rem;
            height: 9rem;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);

            background-image: url('../img/tutorial_install.png');
        }

        &-label {
            position: absolute;
            bottom: -3.5rem;
            left: 50%;
            transform: translate(-50%, 0);

            font-size: 1.5rem;
            font-style: italic;

            color: #fff;
        }
    }

    .text {
        position: absolute;
        top: 2.5%;
        left: 50%;

        width: 50rem;
        margin: 16.875rem 0 0 -25rem;

        font-size: 4.2rem;
        font-style: italic;
        line-height: 4.2rem;
        text-align: center;

        color: $greyscale-white;
    }
}

.slide-section-bottom {
    bottom: 7.5%;
    margin-bottom: -2.625rem;
}

.slide-image {
    width: 100%;
    height: 100%;

    background-size: cover;
    background-position: center bottom;
}

for num in (1..3) {
    .slide-image-0{num} {
        background-image: url('../img/tutorial_' + num + '.png');
    }
}

.slide-button {
    margin: 0 2rem;

    font-family: $primary-font-family;

    &::-moz-focus-inner {
        border: 0;
    }
}
